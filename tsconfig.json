{
	"compilerOptions": {
		"target": "ES2023",
		"module": "CommonJS",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "build",
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "coverage", "build"]
}
